#include<iostream>
#include<iomanip>
#include<cstring>
using namespace std;
class CStudent
{
private:
    char Name[10],Place[10];
    int Number,Age;
    double Score;
public:
    CStudent(CStudent &stu)
    {
        strcpy(Name,stu.Name);
        strcpy(Place,stu.Place);
        Number=stu.Number;
        Age=stu.Age;
        Score=stu.Score;
    }
    CStudent(char *name,char *place,int number,int age,double score)
    {
        strcpy(Name,name);
        strcpy(Place,place);
        Number=number;
        Age=age;
        Score=score;
    }
    CStudent operator+(CStudent stu)
    {
        CStudent temp(*this);
        temp.Score=Score+stu.Score;
        return temp;
    }
    void Display()
    {
        cout<<"姓名："<<Name<<setfill(' ')<<setw(10)<<"籍贯："<<Place<<setfill(' ')<<setw(8)<<" 学号："<<Number<<" 年龄："<<Age<<setfill(' ')<<setw(10)<<"成绩："<<Score<<endl;
    }
    double Show()
    {
        return Score;
    }
};
int main()
{
    CStudent stu1("WANGJIWO","江苏",1,18,98),stu2("WOSHISHUI","上海",2,17,100),stu0(stu1);
    stu1.Display();
    stu2.Display();
    stu0=stu1+stu2;
    cout<<"成绩总和为："<<stu0.Show()<<endl;
    return 0;
}
